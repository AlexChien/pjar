<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=gb2312">
<title><%= t("site.title") %></title>
<link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
<link href="/stylesheets/index.css" rel="stylesheet" type="text/css">
<script src="/javascripts/index.js" type="text/javascript" charset="utf-8"></script>
<script src="/javascripts/SWAPIMGRESTORE.js" type="text/javascript" charset="utf-8"></script>
</head>

<body bgcolor="#646459" background="/images/homebg2_.gif" leftmargin="0" topmargin="150" marginwidth="0" marginheight="0" onLoad="">

  <table style="position:absolute;top:150px;" width="100%" border="0" cellpadding="0" cellspacing="0" background="/images/homebg.jpg" class="bg">
    <tr>
      <td width="300" height="318" align="right" valign="bottom"><img src="/images/spacer.gif" width="300" height="1"></td>
      <td width="220" valign="top"><table width="100%" height="317" border="0" cellpadding="0" cellspacing="0" bgcolor="#E6E6DC">
          <tr>
            <td height="55" valign="bottom"><img src="/images/logo_en.gif" border="0"><br></td>
          </tr>
          <tr>
            <td align="center" valign="top"><br>

              <!-- 导航开始 -->

              <table width="150" border="0" cellspacing="3" cellpadding="0">
                <%= render :partial => 'shared/nav' %>
              </table>

              <!-- 导航结束 --></td>
          </tr>
          <tr>
            <td bgcolor="#B3B39A" height="1">
              <img src="/images/spacer_g.gif" width="1" height="1">
            </td>
          </tr>
          <%= render :partial => 'shared/nav_secondary' %>

        </table></td>
      <td width="60%" valign="middle"><div id="center" style="">
          <div id="slider">
            <% @types.each do |type| %>
            <div class="slide"> <%= link_to image_tag("/images/typeImages/#{type.title_image}", :alt => "#{type.typename}", :class => "diapo"), "/portfolios/by_type/#{type.id}" %>
              <div class="text"> <a href="/portfolios/by_type/<%= type.id %>"> <span class="title"><%= type.typename %></span>
                <div><%= raw type.intro %></div>
                </a> </div>
            </div>
            <% end %>
          </div>
        </div></td>
    </tr>
  </table>

<script type="text/javascript">
slider.init();
</script>
</body>
</html>